---
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "../../lib/utils";

const typographyVariants = cva("", {
  variants: {
    variant: {
      h1: "text-[#340916] text-4xl md:text-5xl leading-[1.15] tracking-tight",
      h2: "text-[#340916] text-2xl md:text-3xl leading-[1.15] tracking-tight",
      h3: "text-[#340916] text-xl md:text-2xl leading-snug tracking-tight",
      h4: "text-[#340916] text-xl leading-snug",
      p: "text-[#766267] text-base leading-relaxed",
      span: "text-[#766267] text-sm leading-relaxed",
    },
    font: {
      sans: "font-sans",
      serif: "font-serif",
    },
    weight: {
      regular: "font-normal",
      medium: "font-medium",
      semibold: "font-semibold",
      bold: "font-bold",
    },
  },
  defaultVariants: {
    variant: "p",
    font: "sans",
    weight: "regular",
  },
});

type TypographyVariants = VariantProps<typeof typographyVariants>;

type Props = TypographyVariants & {
  as?: "h1" | "h2" | "h3" | "h4" | "p" | "span";
  class?: string;
};

const {
  as = "p",
  variant = as,
  font = "sans",
  weight = "regular",
  class: className,
} = Astro.props as Props;

const Tag = as;
---

<Tag class={cn(typographyVariants({ variant, font, weight }), className)}>
  <slot />
</Tag>
