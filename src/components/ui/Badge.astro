---
import { cn } from "../../lib/utils";

type Props = {
  class?: string;
};

const { class: className } = Astro.props as Props;
---

<span
  class={cn(
    "relative inline-flex max-w-full items-center rounded-sm bg-brand-100 px-3 py-1",
    "text-xs font-normal text-brand-700 uppercase",
    className
  )}
>
  <span
    class={cn(
      "block max-w-full overflow-hidden text-ellipsis whitespace-nowrap"
    )}
  >
    <slot />
  </span>
</span>
