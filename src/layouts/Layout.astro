---
import Footer from "../components/blocks/Footer.astro";
import Navigation from "../components/blocks/Navigation.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Intastyl - Twój profesjonalny salon fryzjerski w Katowicach",
  description = "Nowoczesne fryzjerstwo w Katowicach. Strzyżenie, koloryzacja i regeneracja włosów. Umów się na wizytę!",
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
  </head>
  <body>
    <div
      class="min-h-dvh flex flex-col bg-brand-100 relative overflow-x-hidden"
    >
      <div
        class="absolute top-0 left-0 w-full h-[480px] bg-linear-to-b from-brand-200 to-brand-100 pointer-events-none"
      >
      </div>
      <div class="relative z-10 flex flex-col flex-1">
        <Navigation />
        <main class="flex-1">
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
